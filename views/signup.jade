extends layout

block content
  #main    
    //canvas#lolcanvas(width='150', height='150', style='position:absolute;z-index:-100;top:0;left:0;width:100%;height:100%')
    a.mlh-trust-badge(href='https://mlh.io/?utm_campaign=Trust%20Badge', target='_blank')
      img(src='https://s3.amazonaws.com/logged-assets/trust-badge/s2016.png', alt='MLH Official - Spring 2016')
    //- .stars
    //- .twinkling
    //- .clouds
    section#canvas
      .jumbotron
        .container
          .row
            .col-md-12
              h1.glow-on-hover: a(href='#') Hold on ... just a few more questions before finishing!
          .row
            form#signupForm.form-horizontal(action='/success', method='post')
              input#id(type='hidden', name='id')
              input#resumeLink(type='hidden', name='resumeLink')
              .form-group
                label.col-sm-2.control-label(for='inputLinkedIn') LinkedIn
                .col-sm-10
                  input#inputLinkedIn.form-control(type='text', placeholder='Link', name='linkedin')
              .form-group
                label.col-sm-2.control-label(for='inputTwitter') Twitter
                .col-sm-10
                  input#inputTwitter.form-control(type='text', placeholder='Link', name='twitter')
              .form-group
                label.col-sm-2.control-label(for='inputGithub') Github
                .col-sm-10
                  input#inputGithub.form-control(type='text', placeholder='Link', name='github')
              .form-group
                label.col-sm-2.control-label(for='inputResume') CV Upload (optional)
                .col-sm-10
                  input#inputResume.form-control(type='file', name='resume')
              .form-group
                .col-sm-offset-2.col-sm-10
                  button.btn.btn-primary(type='submit') Submit
                  p.hidden Loading...
block scripts
  // jQuery (necessary for Bootstrap's JavaScript plugins)
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
  // Custom JS
  script(src='javascripts/signup.js')
